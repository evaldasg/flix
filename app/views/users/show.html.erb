<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
  </header>
</article>
<footer>
  <nav>
    <p><%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %></p>
    <p><%= link_to 'Delete Account', @user, method: :delete,
          data: { confirm: "Are you sure want to permanenly delete your account?" },
          class: 'button' %></p>
  </nav>
</footer>
